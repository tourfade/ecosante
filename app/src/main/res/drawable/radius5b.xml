<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:startColor="#5EA7FE" android:endColor="#A7CAF7"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <solid android:color="#5EA7FE"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorAccent" />
            <gradient android:angle="-90" android:startColor="#5EA7FE" android:endColor="#167CF7" />
        </shape>
    </item>
</selector>
