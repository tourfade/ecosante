    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/swiperefresh"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:addStatesFromChildren="false"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/patientDoctorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:elevation="4dp"
                android:padding="10dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/ecosantedocotorContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextView.InputLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="7dp"
                            android:paddingTop="0dp"
                            android:paddingRight="0dp"
                            android:paddingBottom="0dp"
                            android:text="Medecin Traitant ÉcoSanté" />

                        <AutoCompleteTextView
                            android:id="@+id/ecosantedocotor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textNoSuggestions|textAutoComplete"
                            android:maxLines="1"
                            android:paddingLeft="7dp"
                            android:text="Dr Habib Dieye" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ecosantedocotorContactContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ecosantedocotorContainer"
                        android:orientation="horizontal">


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Cellulaire">

                            <EditText android:importantForAutofill="no"
                                android:id="@+id/ecosantedocotorMobile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:text="819 445 3434" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Email">

                            <EditText android:importantForAutofill="no"
                                android:id="@+id/ecosantedocotorEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textNoSuggestions|textEmailAddress"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:text="ftoure@gmail.com" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/specialistdocotorContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ecosantedocotorContactContainer"
                        android:hint="Medecin Spécialiste Traitant">

                        <EditText android:importantForAutofill="no"
                            android:id="@+id/specialistdocotor"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
