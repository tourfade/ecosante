<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kamitsoft.ecosante">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>


    <application
        android:name="com.kamitsoft.ecosante.EcoSanteApp"
        tools:replace="android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:launchMode="singleInstance"
            android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name="com.kamitsoft.ecosante.signing.SignIn"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name="com.kamitsoft.ecosante.signing.CredentialRestoreActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name="com.kamitsoft.ecosante.client.EcoSanteActivity"
            android:label="@string/title_activity_dmi"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name=".client.user.subscription.PaymentWebView"
            android:label="@string/payment"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity
            android:launchMode="singleInstance"
            android:name=".client.patient.Encounter"
            android:label="@string/encounter"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name=".client.admin.UserProfileEditor"
            android:label="@string/encounter"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:launchMode="singleInstance"
            android:name="com.kamitsoft.ecosante.client.patient.PatientActivity"
            android:label="@string/patient_files"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">

        </activity>
        <activity
            android:name=".ImagePickerActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">

        </activity>

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>

        <provider
            android:name=".GenericFileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_path"/>
        </provider>
        <service android:name=".services.ApiSyncService"/>

        <service android:name=".services.WorkerService"
            android:process="com.kamitsoft.dmi.worker"/>

        <service android:name=".services.FCMService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>